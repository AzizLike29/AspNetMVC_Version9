@model WebTestUsersCompany.ViewModels.RoomBookingViewModel
@{
    ViewData["Title"] = "Membuat Pemesanan Ruangan";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h3 class="mb-0">Membuat Pemesanan Ruangan</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="RoomId" class="form-label">Room ID</label>
                            <input asp-for="RoomId" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="BookingDate" class="form-label">Tanggal Pemesanan</label>
                            <input asp-for="BookingDate" type="date" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="BookedBy" class="form-label">Dipesan Oleh</label>
                            <input asp-for="BookedBy" class="form-control" required />
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-danger me-md-2">Batal</a>
                            <button type="submit" class="btn btn-success">Simpan</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>